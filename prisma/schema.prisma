generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum WorkOrderStatus {
  NEW
  DIAGNOSTIC
  WAITING_PARTS
  IN_PROGRESS
  DONE
  CANCELLED
}

enum PaymentStatus {
  UNPAID
  PARTIAL
  PAID
}

enum PaymentMethod {
  CASH
  CARD
  TRANSFER
  OTHER
}

enum WorkOrderItemType {
  LABOR
  PART
}

enum UserRole {
  ADMIN
  MECHANIC
  RECEPTIONIST
}

// ---------- MODELS ----------

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique @db.VarChar(255)
  password  String   @db.VarChar(255)
  name      String   @db.VarChar(100)
  role      UserRole @default(MECHANIC)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
}

model Appointment {
  id          Int      @id @default(autoincrement())
  carId       Int
  car         Car      @relation(fields: [carId], references: [id], onDelete: Cascade)
  title       String   @db.VarChar(255)
  description String?
  startTime   DateTime
  endTime     DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([carId])
  @@index([startTime])
}

model Car {
  id           Int           @id @default(autoincrement())
  licensePlate String        @db.VarChar(20)
  vin          String?       @db.VarChar(30)
  year         Int?
  make         String        @db.VarChar(50)
  model        String        @db.VarChar(50)
  mileage      Int?
  ownerName    String        @default("Unknown") @db.VarChar(100)
  ownerPhone   String        @db.VarChar(30)
  notes        String?
  color        String        @default("Not specified") @db.VarChar(50)
  workOrders   Work_Done[]
  appointments Appointment[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@unique([licensePlate])
  @@index([ownerPhone])
  @@index([ownerName])
}

model Work_Done {
  id    Int @id @default(autoincrement())
  car   Car @relation(fields: [carId], references: [id], onDelete: Restrict)
  carId Int

  status              WorkOrderStatus @default(NEW)
  title               String          @db.VarChar(255)
  customerComplaint   String? // Klienta sūdzība
  internalNotes       String? // Iekšējie pieraksti
  estimatedCompletion DateTime?
  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt
  completedAt         DateTime?

  items Work_Item_Used[]

  // "invoice" / money fields
  paymentStatus PaymentStatus  @default(UNPAID)
  paymentMethod PaymentMethod?
  paidAt        DateTime?

  totalLabor Decimal? @db.Decimal(10, 2)
  totalParts Decimal? @db.Decimal(10, 2)
  totalPrice Decimal? @db.Decimal(10, 2)

  @@index([carId])
  @@index([status])
  @@index([createdAt])
}

model Work_Item_Used {
  id          Int       @id @default(autoincrement())
  workOrder   Work_Done @relation(fields: [workOrderId], references: [id], onDelete: Cascade)
  workOrderId Int

  type        WorkOrderItemType @default(LABOR)
  description String
  quantity    Decimal           @default(1) @db.Decimal(10, 2)
  unitPrice   Decimal           @db.Decimal(10, 2)
  total       Decimal           @db.Decimal(10, 2)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([workOrderId])
}
